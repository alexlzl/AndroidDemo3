<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/base_activity_titles"></include>
<View
    android:id="@+id/view_top"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:background="@color/province_line_border"
    android:layout_height="@dimen/linear_28"></View>
    <RelativeLayout
        android:layout_below="@id/view_top"
        android:id="@+id/nick_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        >

        <TextView
            android:layout_alignParentLeft="true"
            android:text="@string/nickname"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_nick"
            android:layout_alignParentRight="true"
            android:text="用户"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginRight="@dimen/margin_20"
            android:textSize="@dimen/textsize_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sex_relative"
        android:layout_below="@id/nick_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        >

        <TextView
            android:layout_alignParentLeft="true"
            android:text="@string/sex"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sex"
            android:layout_alignParentRight="true"
            android:text="@string/man"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/sex_relative"
        android:id="@+id/wechat_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        >

        <TextView
            android:layout_alignParentLeft="true"
            android:text="@string/wechat"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_wechat"
            android:layout_alignParentRight="true"
            android:text="888888"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/wechat_relative"
        android:id="@+id/phone_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        >

        <TextView
            android:layout_alignParentLeft="true"
            android:text="@string/phone"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_alignParentRight="true"
            android:text="13699988988"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/area_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        android:layout_below="@+id/phone_relative"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_area"
            android:layout_alignParentLeft="true"
            android:text="@string/area"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="海淀"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
</LinearLayout>