<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_activity_titles"></include>
    <View
        android:id="@+id/view_top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:background="@color/province_line_border"
        android:layout_height="@dimen/linear_28"></View>

    <RelativeLayout
        android:id="@+id/nick_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        android:layout_below="@id/view_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="头像"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16" />

        <ImageView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@drawable/pettrasfer" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@color/province_line_border" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sex_relative"
        android:layout_below="@id/nick_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        >

        <TextView
            android:layout_alignParentLeft="true"
            android:text="名称"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sex"
            android:layout_alignParentRight="true"
            android:text="贝贝"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/sex_relative"
        android:id="@+id/wechat_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        >

        <TextView
            android:layout_alignParentLeft="true"
            android:text="性别"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_wechat"
            android:layout_alignParentRight="true"
            android:text="雄性"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/wechat_relative"
        android:id="@+id/phone_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        >

        <TextView
            android:layout_alignParentLeft="true"
            android:text="品种"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_alignParentRight="true"
            android:text="金毛"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/area_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        android:layout_below="@+id/phone_relative"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_area"
            android:layout_alignParentLeft="true"
            android:text="初次疫苗时间"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="2017-04-02"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ly_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_48"
        android:layout_below="@+id/area_relative"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_alignParentLeft="true"
            android:text="是否笼养"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="是"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/province_line_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
</LinearLayout>