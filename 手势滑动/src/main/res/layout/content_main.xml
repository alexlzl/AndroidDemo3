<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yanzhenjie.defineview.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btn_scroll_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_scroll_method" />

    <Button
        android:id="@+id/btn_scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_scroll_layout" />

    <Button
        android:id="@+id/btn_scroll_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_scroll_pager" />
</LinearLayout>
