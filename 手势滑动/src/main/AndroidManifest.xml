<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yanzhenjie.defineview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ScrollLayoutActivity"
            android:label="@string/item_scroll_layout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScrollPagerActivity"
            android:label="@string/item_scroll_pager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScrollMethodActivity"
            android:label="@string/item_scroll_method"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>