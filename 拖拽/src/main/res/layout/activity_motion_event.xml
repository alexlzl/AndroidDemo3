    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wuxiaolong.apksample.MotionEventActivity">

    <com.wuxiaolong.androidsamples.motionevent.MotionEventViewGroupA
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center">

        <com.wuxiaolong.androidsamples.motionevent.MotionEventViewGroupB
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@android:color/holo_purple"
            android:gravity="center">

            <com.wuxiaolong.androidsamplessample.MotionEventViewC
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@android:color/holo_green_dark"
                android:gravity="center" />
        </com.wuxiaolong.androidsamples.motionevent.MotionEventViewGroupB>
    </com.wuxiaolong.androidsamples.motionevent.MotionEventViewGroupA>
